<h1>New Game</h1>

<div>
  <ul class="list-inline">
    <% @letters.each do |letter| %>
      <li class="list-inline-item letters text-center"><%= letter %></li>
    <% end %>
  </ul>
</div>

<p>What is the longest word you can find?</p>
<form action="/score" method="post" class="form-inline">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <input class="form-control" type="text" name="word">
    <input class="btn" type="submit" value="Play">
  </div>
</form>
